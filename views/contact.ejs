<%- include("includes/head.ejs"); %>

    <body>
        <%- include("includes/nav.ejs"); %>
            <div class="conatiner m-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <img src="<%= contact.avatar%>" style="height: 45vh;" alt="No pic available">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="card-title">
                                        <%= contact.username %>
                                    </h4>
                                    <div class="d-flex justify-content-between">
                                        <a href="/contacts/update/<%= contact.id %>" class="btn btn-outline-success">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>

                                        <form action="/contacts/<%= contact.id %>?_method=DELETE" method="post"
                                            class="d-inline ms-2">
                                            <button class="btn btn-outline-danger"><i
                                                    class="fa-solid fa-trash"></i></button>
                                        </form>
                                    </div>
                                </div>
                                <div class="card-text">
                                    <p><b>#Id : </b> <i>
                                            <%= contact.id %>
                                        </i></p>

                                    <p><b>email : </b> <i>
                                            <%= contact.email %>
                                        </i></p>
                                    <p><b>Phone : </b> <i>
                                            <%= contact.phone %>
                                        </i></p>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
    </body>

    </html>